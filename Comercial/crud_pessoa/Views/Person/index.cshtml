@model IEnumerable<crud_pessoa.Models.Person>
<div>
    <table class="table table-striped">
        <thead>
            <tr>Id</tr>
            <tr>Nome</tr>
            <tr>Endere√ßo</tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.name</td>
